<p id="notice"><%= notice %></p>

<h1>Listing Tks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tks.each do |tk| %>
      <tr>
        <td><%= tk.title %></td>
        <td><%= tk.content %></td>
        <td><%= link_to 'Show', tk %></td>
        <td><%= link_to 'Edit', edit_tk_path(tk) %></td>
        <td><%= link_to 'Destroy', tk, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

